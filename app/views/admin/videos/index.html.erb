<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Price</th>
      <th>Approved</th>

      <th>Balance</th>
      <th>Views</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.description %></td>
        <td><%= video.duration %></td>
        <td><%= video.price %></td>
        <td><%= video.approved %></td>
        <td><%= video.balance %></td>
        <td><%= video.views %></td>
        <td><%= video.user.full_name %></td>
        <td>
          <%= button_to toggle_approval_admin_video_path(video), method: :patch, class: "btn btn-primary" do %>
            <%= video.approved? ? "Unapprove" : "Approve" %>
          <% end %>
        </td>
        <td><%= link_to "Download", video.clip.url %></td>
        <td><%= link_to 'Show', video, 'data-turbolinks' => 'false' %></td>
        <td><%= link_to 'Edit', edit_video_path(video) %></td>
        <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_video_path %>
